{% extends 'base.html.twig' %}

{% block title %}Modification Utilisateur{% endblock %}

{% block body %}
  {% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
  {% endfor %}

  <div class="container">
    <h1>Détails de l'utilisateur</h1>

    {{ form_start(registrationForm) }}
    <div class="form-row">
      <div class="form-group col-md-6"" id="some-custom-id">
        {{ form_label(registrationForm.email, 'Mail') }}
        {{ form_widget(registrationForm.email, { 'attr' :{'class': "form-control"}}) }}
      </div>
      <div class="form-group col-md-6" id="some-custom-id">
        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'label' : 'Password',
                                                      'class': "form-control"}}) }}
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6"" id="some-custom-id">
        {{ form_label(registrationForm.nom, 'Nom') }}
        {{ form_widget(registrationForm.nom, { 'attr' :{'class': "form-control"}}) }}
      </div>
      <div class="form-group col-md-6" id="some-custom-id">
        {{ form_label(registrationForm.prenom, 'Prénom') }}
        {{ form_widget(registrationForm.prenom, {'attr': {'class': "form-control"}}) }}
      </div>
    </div>
    <div class="form-row">
      <div class="form-check" style="align-items: center;">
        {{ form_label(registrationForm.roles) }}
        {{ form_widget(registrationForm.roles) }}
      </div>
    </div>

    <button type="submit" class="btn btn-success" style="text-align: center;">Inscription</button>
    {{ form_end(registrationForm) }}

  </div>
{% endblock %}

